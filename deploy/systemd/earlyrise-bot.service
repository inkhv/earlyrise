[Unit]
Description=earlyrise Bot (grammY)
After=network.target earlyrise-api.service
Wants=earlyrise-api.service

[Service]
Type=simple
WorkingDirectory=/opt/earlyrise
EnvironmentFile=/opt/earlyrise/deploy/env.production
Environment=NODE_ENV=production
ExecStart=/usr/bin/env node /opt/earlyrise/apps/bot/dist/index.js
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target


